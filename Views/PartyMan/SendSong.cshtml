@{
    ViewData["Title"] = "Pošalji pjesmu DJ-u";
    Layout = null;
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta http-equiv="refresh" content="10">
    <meta charset="utf-8" />
    <title>Pošalji pjesmu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f3f3;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 400px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #1976d2;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            button:hover {
                background-color: #125ca1;
            }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Pošalji pjesmu DJ-u</h2>

        <form asp-action="SendSong" method="post">
            <label>Naziv pjesme:</label>
            <input name="SongName" required />

            <label>YouTube URL:</label>
            <input name="YoutubeUrl" required />

            <label>Opis:</label>
            <textarea name="Description" rows="3"></textarea>

            <button type="submit">Pošalji</button>
        </form>

       


    </div>

</body>
</html>
